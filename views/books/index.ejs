<%- include('../partials/header') %>

<h2>Book Recommendations</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publish Year</th>
            <th>Genre</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% books.forEach(function(b) {%>
            <tr>
                <td><%= b.title %></td>
                <td><%= b.author %></td>
                <td><%= b.publishYear %></td>
                <td><%= b.genre %></td>
                <td><%= b.description %></td>
                <td><a class="btn btn-outline-success" href="/books/<%= b._id %>">Details</a></td>
                <td>
                    <form action="/books/<%= b._id %>?_method=DELETE" id="delete-form" method="POST">
                        <button type="submit" class="btn btn-outline-danger">x</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>